::-webkit-scrollbar
    width 9px
    height 9px

::-webkit-scrollbar-button
    width 0px
    height 0px

::-webkit-scrollbar-thumb
    background #c0c0c0
    border 0px none #ffffff
    border-radius 50px
    &:hover
        background #c0c0c0
    &:active
        background #ddd

::-webkit-scrollbar-track
    background #eee
    border 0px none #ffffff
    border-radius 50px
    &:hover
        background #eee
    &:active
        background #eee

::-webkit-scrollbar-corner
    background transparent

html
    height 100vh

body
    height 100%
    display flex
    justify-content center

.header-search
  height 50px
  background #3768aa
  margin-bottom 15px
  padding 0 20px
  box horizontal middle

  &-searchbar
    height 25px
    box horizontal
    margin-right 30px
    &__input
