      &-item-offer
        box horizontal middle
        font-size 13px
        height 35px
        
        &:hover 
          background #e5ecf4
          & .catalog-list-item-offer__btn
            visibility visible
        &__reliability
          position relative
          color #c1c1c1
          margin-left 45px
          margin-right 35px
          &:before
            content ''
            position absolute
            size 16px
            background yellow
            border-radius 10px
            left -30px
          &-span 
             color #484848
             margin-left 5px
        &__prepayment
           color #6c6c6c
           margin-right 50px
        &__delivery
           color #b2b2b2
           margin-right 37px
           &-span
             color #484848
        &__availability
           color #b2b2b2
           margin-right 40px
           &-span
             color #484848
             margin-left 5px
        &__price
           color #484848
           margin-right 20px    
        &__btn
           visibility hidden
           background #d24941
           border none
           color #fff
           padding 3px 6px
           box horizontal middle
           cursor pointer
           &:before
             content ''
             background: url(../img/cart.png);
             background-size: 100%;
             width: 19px;
             height: 19px;
             margin-right: 5px;

           
         
        

.rating
    width 112px
    border none
    & > input
        display none
    & > label
        color #ddd
        float right
        &:before
            margin 3px
            font-size 1.25em
            font-family FontAwesome
            display inline-block
            content "\f005"
    & > .half
        &:before
            content "\f089"
            position absolute

.rating > input:checked ~ label, 
.rating:not(:checked) > label:hover, 
.rating:not(:checked) > label:hover ~ label
    color #FFD700

.rating > input:checked + label:hover, 
.rating > input:checked ~ label:hover,
.rating > label:hover ~ input:checked ~ label, 
.rating > input:checked ~ label:hover ~ label
    color #FFED85         


